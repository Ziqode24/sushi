{
  "name": "Node.js",
  "image": "mcr.microsoft.com/devcontainers/javascript-node:20",
  "customizations": {
    "vscode": {
      "extensions": [
        "esbenp.prettier-vscode",
        "dbaeumer.vscode-eslint",
        "formulahendry.auto-rename-tag",
        "xabikos.JavaScriptSnippets",
        "ritwickdey.LiveServer",
        "pkief.material-icon-theme",
        "DavidMorais.dark-magic-themes"
      ],
      "settings": {
        "editor.fontFamily": "'Fira Code', monospace",
        "editor.fontLigatures": true,
        "workbench.colorTheme": "Dark Magic Tokyo",
        "workbench.iconTheme": "material-icon-theme",
        "terminal.integrated.fontFamily": "monospace",
        "terminal.integrated.fontSize": 14,
        "terminal.integrated.lineHeight": 1.4,
        "terminal.integrated.cursorStyle": "block",
        "terminal.integrated.cursorBlinking": true,
        "terminal.integrated.letterSpacing": 0.5,
        "terminal.integrated.scrollback": 10000,
        "terminal.integrated.minimumContrastRatio": 4.5,
        "terminal.integrated.drawBoldTextInBrightColors": false,
        "terminal.integrated.cursorWidth": 2,
        "terminal.integrated.background": "#1e1e1e",
        "terminal.integrated.foreground": "#d4d4d4",
        "terminal.integrated.selectionBackground": "#264f78",
        "terminal.integrated.bellDuration": 0,
        "terminal.integrated.tabFocusMode": false,
        "editor.fontSize": 14,
        "editor.lineHeight": 22,
        "editor.formatOnSave": true,
        "editor.minimap.enabled": false,
        "editor.lineNumbers": "off",
        "files.trimTrailingWhitespace": true,
        "files.insertFinalNewline": true,
        "files.autoSave": "afterDelay",
        "search.exclude": {
          "**/node_modules": true,
          "**/dist": true
        },
        "editor.wordWrap": "on",
        "editor.renderWhitespace": "none",
        "explorer.confirmDelete": false,
        "editor.cursorBlinking": "solid",
        "editor.smoothScrolling": true,
        "editor.tabSize": 2,
        "editor.detectIndentation": false,
        "workbench.activityBar.visible": false,
        "workbench.statusBar.visible": false,
        "workbench.editor.showTabs": false,
        "breadcrumbs.enabled": false,
        "editor.hover.enabled": false,
        "editor.matchBrackets": "never",
        "problems.decorations.enabled": false,
        "editor.renderLineHighlight": "none",
        "editor.selectionHighlight": false,
        "editor.overviewRulerBorder": false,
        "editor.hideCursorInOverviewRuler": true,
        "editor.guides.indentation": false,
        "git.decorations.enabled": false,
        "workbench.tips.enabled": false,
        "workbench.editor.enablePreview": false,
        "workbench.startupEditor": "none",
        "editor.lightbulb.enabled": false,
        "editor.gotoLocation.multipleReferences": "goto",
        "editor.gotoLocation.multipleDefinitions": "goto",
        "editor.gotoLocation.multipleDeclarations": "goto",
        "editor.gotoLocation.multipleImplementations": "goto",
        "editor.gotoLocation.multipleTypeDefinitions": "goto"
      }
    }
  }
}
